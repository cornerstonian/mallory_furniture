<div class="page-header">
  <h1>Mallory Furniture</h1>
  <div class="">
    <%= link_to 'Home', root_path %>
  </div>
</div>


<% @products.in_groups_of(3, false) do |products| %>
  <div class="row">
    <% products.each do |product| %>
      <div class="col-xs-4">
        <div class="thumbnail">

          <%= image_tag product.img_file, class: "small" %>

          <div class="caption">
            <h3><%= product.item %></h3>
            <p><%= number_to_currency product.price %></p>
            <%= link_to 'More Info', detail_path(id: product.pid), class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
